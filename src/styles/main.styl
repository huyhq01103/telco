$green = #4FBA69
bg()
  background linear-gradient(90deg, $green 0%, #97C93D 100%)
clearfix()
	&:before
	&:after
		content ""
		display table
	&:after
		clear both
	if support-for-ie
		zoom 1
*
  box-sizing border-box
img 
  max-width 100%
html,body
  padding 0
  margin 0
  min-height 100%
  font-family 'Encode Sans', sans-serif
body
  display flex
  flex-direction column
  &.fixed
    overflow hidden

.container
  clearfix()
  width 100%
  min-width 320px
  padding 0 16px
  margin 0 auto
  overflow hidden
    
.wraper
  flex-grow 1
  background white url('../img/union.svg') no-repeat left 65%
  background-size auto 630px
header
  bg()
  padding 45px 0 2.3%
  text-align center
  color white
  position relative
  h1
    font-size 24px
    line-height 1.3em
    margin 0
    text-shadow -1px 3px 1px green
    text-transform uppercase
  h2
    font-size 20px
    font-weight 300
    margin 0 0 10px
    text-transform uppercase
  &:after
    content ''
    position absolute
    width calc(100% + 1px)
    height 13%
    left -1px
    bottom 0
    background url('../img/wave.svg') no-repeat center top
    background-size 100% 225%
    z-index 2
  .img
    overflow hidden
    margin -5.5% -15px 0

footer 
  bg()
  color white
  font-size 13px
  line-height 16px
  h2
    font-size 25px
    line-height 31px
    font-weight 600
    margin 0 0 14px
  .footer-wrapper
    padding 20px 0
    background url('../img/footer.svg') no-repeat right top
    background-size auto 90%
  ul
    list-style none
    margin 0
    padding 0
    clearfix()
    li
      display flex
    span 
      white-space nowrap
      min-width 120px
      display flex
      justify-content space-between
      margin-right 5px
      &:after
        content: ':'
.hide
  display none

.item
  display none
  &.active
    display block

#mainTab
  .top-tabs
    display flex
    list-style none
    align-items center
    justify-content center
    border-bottom 1px solid #E3E3E3
    .tab
      border none
      background none
      border-bottom 3px solid transparent
      padding-bottom 10px
      font-size 15px
      color #14842F
      cursor pointer
      filter grayscale(1)
      font-size 0
      width 138px
      height 62px
      margin 0 16px
      margin-bottom -1px
      &.active
        filter none
        border-bottom 3px solid $green
      &:focus
          outline none
    .vina
      background url('../img/vinaphone.svg') no-repeat center center
      background-size 100%
    .mobi
      background url('../img/mobifone.svg') no-repeat center 22px
      background-size 100%
  .data-pack
    clearfix()
    padding 25px 0 60px
    display flex
    flex-direction column
    justify-content space-between
    align-items center
    position relative
    .tabs
      background #F5F5F5
      border-radius 3px
      margin-bottom 20px
      z-index 2
    .tab
      padding 8px 35px
      color #6E7171
      background transparent
      font-size 13px
      border none
      float left
      cursor pointer
      &.active
        border-radius 3px
        background $green
        color white
        box-shadow 0px 1px 2px rgba(78, 78, 78, 0.3)
      &:focus
        outline none
    .imgbox
      position relative
      .item
        position absolute
        bottom 17.5%
        left 14%
        color white
        font-size 3vw
    .des
      order 2
    .qrcode
      display none
    .guide
      display inline-block
      color #006AFF
      cursor pointer
      text-decoration-line underline
      margin-top 20px
    .action
      text-align center
  .mobi-wraper .data-pack
    .imgbox
      .item
        left 55%
        bottom 20.5%
  .data-tabs
    color #000
    h2
      font-size 20px
      font-weight 400
      line-height 31px
      display flex
      align-items center
      margin 20px 0 12px
      span
        font-size 40px
        font-weight 800
        line-height 75px
        margin-right 9px
        background linear-gradient(90deg, #97C93D 0%, $green 100%)
        -webkit-background-clip text
        -webkit-text-fill-color transparent
    .item
      ul
        padding 0
        margin 0
        li
          list-style none
          font-size 15px
          line-height 19px
          padding-left 18px
          margin-bottom 8px
          background url('../img/tick.svg') no-repeat left 3px
          span 
            color #14842F
            font-weight 600
.dky
  display inline-block
  margin-top 24px
  background linear-gradient(90deg, #A4E038 0%, #4CCF6C 100%)
  box-shadow 0px 5px 20px rgba(207, 207, 207, 0.8)
  border-radius 50px
  color white
  font-size 16px
  line-height 20px
  font-weight 500
  padding 20px 65px
  text-decoration none
  box-shadow 0px 5px 15px #D8D8D8
  &::after
    content ""
    display inline-block
    margin-left 13px
    vertical-align middle
    width 17px
    height 14px
    background url('../img/arrow-white.svg') no-repeat center center
.other-pack
  h3
    font-size 23px
    line-height 29px
    font-weight 500 
    margin 0
.slider
  position relative
  margin 0 -10px
  .item-wrap
    box-shadow 0px 6px 10px #E0ECF5
    background white
    border-radius 5px
  .slide-item
    width 298px
  .slider-content
    padding 18px 20px
    h3
      font-size 18px
      font-weight 600
      line-height 22px
      margin-bottom 13px
  .info
    border-top 1px dashed #C6D2DC
    border-bottom 1px dashed #C6D2DC
    padding 5px 0
    div
      padding 5px 0
      font-size 14px
      span 
        font-weight bold
        color #00A1E4
  .detail
    padding 20px 0 0
    display flex
    justify-content space-between
    span 
      font-weight normal
      color black
      font-size 18px
      line-height 22px
    a
      display inline-block
      font-size 13px
      line-height 20px
      padding 5px 25px
      text-decoration none
      color white
      background linear-gradient(90deg, #97C93D 0%, $green 100%)
      border-radius 50px
  .slick-arrow
    position absolute
    border none
    top -24px
    font-size 0
    background url('../img/arrow.svg') no-repeat center center
    width 22px
    height 18px
    cursor pointer
    &:focus
      outline none
    &.slick-next
      right 15px
    &.slick-prev
      right 65px
      transform rotate(180deg)
    &.slick-disabled
      opacity 0.5

.slick-initialized .slick-slide
  padding 32px 10px
/* Fading animation */
.slick-dots
  display flex !important
  justify-content center
  align-items center
  list-style none
  margin 10px
  button  
    cursor pointer
    display block
    width 10px
    height 10px
    background #DDE9F2
    border-radius 50%
    border none 
    font-size 0
    margin 0 5px
    padding 0
    &:focus
      outline none
  .slick-active button 
      background #3F5466
.fade
	-webkit-animation-name fade
	-webkit-animation-duration 0.5s
	animation-name fade
	animation-duration 0.5s
.download
  padding 30px 0
  a
    display block
    width 262px
    max-width 32%
    min-height 70px
    margin 16px auto
    font-size 0
    &.appstore
      background url('../img/appstore.svg') no-repeat center center
      background-size 100%
    &.ggplay
      background url('../img/googleplay.svg') no-repeat center center
      background-size 100%
    &.coccocpro
      background url('../img/coccocpro.svg') no-repeat center center
      background-size 100%
.overlay
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0, .5)
  z-index 9999
  align-items center
  justify-content center
  display none
  &.active
    display flex
  .modal
    width 800px
    background white
    max-width calc(100% - 32px)
    font-size 14px
    line-height 18px
    max-height 95%
    display flex
    position relative
    .modal-wrap
      padding 35px 16px
      overflow auto
      &::-webkit-scrollbar
        width 3px
        border-radius 2px
      &::-webkit-scrollbar-thumb
        background #636363
    .logo
      display block
      width 145px
      height 35px
      font-size 0
      margin 0 auto
      background url('../img/logo.svg') no-repeat center center
      background-size cover
    .btn-close
      font-size 50px
      color #DADADA
      cursor pointer
      position absolute
      right 15px
      top 15px
      &:hover
        color $green 
    h2
      text-align center
      margin 10px 0
    .label
      background linear-gradient(90deg, #97C93D 0%, $green 100%)
      padding 9px 12px
      color white
      margin 10px 0 12px
      display inline-block
      border-radius 8px 5px 9px 7px
      clip-path polygon(0 10%, 100% 0, 96% 100%, 3% 100%)
      -webkit-clip-path polygon(0 10%, 100% 0, 96% 100%, 3% 100%)
    a
      color #006AFF
      text-decoration none
    .dky
      color white
      margin 30px auto
    p
      margin-bottom 10px
    b
      font-weight 600
    ul
      list-style none
      padding 0
      li
        padding-left 15px
        margin-bottom 10px
        &::before
          content "\2022"
          color $green
          font-size 16px
          font-weight bold
          display inline-block 
          width 1em
          margin-left -1em
    .bottomlist
      font-size 13px

@keyframes fade
  from 
    opacity .4
  to 
    opacity 1

@media screen and (min-width 375px)
  header
    h1
      font-size 24px
      width 86%
      margin 0 auto
  #mainTab
    .data-tabs
      h2
        font-size 22px
        span
          font-size 50px
@media screen and (min-width 568px)
  .wraper
    background-position left 70%
@media screen and (min-width 768px)
  header
    &:after
      height 17%
    h1
      font-size 40px
      line-height 50px
      margin 0 auto
      text-shadow -1px 3px 1px green
    h2
      font-size 30px
      font-weight 300
      margin 0
    .img
      margin -5.5% auto 0
      width 80%
  .wraper
    background-size auto 800px
  #mainTab
    .data-pack
      padding 75px 0 100px
      flex-direction row
      align-items flex-start
      .imgbox
        width calc(100% - 330px)
        .item
          font-size 1.8vw
      .tabs
        position absolute
        top 45px
      .des
        order inherit
        overflow hidden
        display inline-block
      .action
        text-align left
      .qrcode
        display flex
        align-items center
        margin 24px 0 0
        span
          margin-right 16px
  .mobi-wraper .data-pack
      .tabs
        left calc(100% - 340px)
  .download
    padding 50px 0 80px
    display flex
    justify-content space-around
    align-items center
  footer 
    font-size 14px
    line-height 27px
    .footer-wrapper
      padding 44px 0
      background-position right center
      background-size auto
@media screen and (min-width 1024px)
  .container
    width 1024px
    padding 0
  header
    padding-bottom 3.5%
    &:after
      height 120px  
  #mainTab
    .data-pack
      .imgbox
        width 588px
        .item
          bottom 17%
          font-size 16px
      .des
        flex-grow 1
    .data-tabs
      h2
        font-size 25px
        span
          font-size 60px
    .mobi-wraper .data-pack
      .imgbox
        .item
          left 56%
          bottom 20%
      .tabs
        left 588px
  .slider
    .slide-item
      width 348px
  .overlay
    .modal-wrap
      padding 45px 32px
    .btn-close
      right 20px
      top 20px
@media screen and (min-width 1366px)   
  .wraper
    background-position left 75%